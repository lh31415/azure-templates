					"createOption" : "FromImage",
					"image" : {
						"uri" : "[parameters('userImageVhdURI')]"
					},
					"vhd" : {
						"uri" : "[concat(variables('osDiskVhdName'),'-vm','.vhd')]"
					}
				},
